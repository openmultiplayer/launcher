{
  "build": {
    "beforeDevCommand": "yarn dev",
    "beforeBuildCommand": "yarn build",
    "devPath": "http://localhost:8050",
    "distDir": "../dist",
    "withGlobalTauri": false
  },
  "package": {
    "productName": "omp-launcher",
    "version": "1.5.2"
  },
  "tauri": {
    "allowlist": {
      "all": false,
      "clipboard": {
        "all": true
      },
      "path": {
        "all": true
      },
      "window": {
        "all": true
      },
      "dialog": {
        "all": true
      },
      "os": {
        "all": true
      },
      "fs": {
        "all": true,
        "scope": ["**", "**/*", "/**/*", "$HOME/.local/**"],
        "exists": true
      },
      "shell": {
        "all": false,
        "open": true
      },
      "process": {
        "all": true
      }
    },
    "bundle": {
      "active": true,
      "targets": "all",
      "identifier": "mp.open.launcher",
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ],
      "windows": {
        "allowDowngrades": true,
        "certificateThumbprint": null,
        "digestAlgorithm": null,
        "nsis": {
          "template": "./nsis/installer.nsi",
          "installMode": "perMachine"
        },
        "signCommand": null,
        "timestampUrl": null,
        "tsp": false,
        "webviewFixedRuntimePath": null,
        "webviewInstallMode": {
          "silent": false,
          "type": "downloadBootstrapper"
        },
        "wix": null
      }
    },
    "security": {
      "csp": null
    },
    "windows": [
      {
        "fullscreen": false,
        "resizable": true,
        "title": "Open Multiplayer Launcher",
        "width": 1000,
        "height": 700,
        "decorations": false,
        "transparent": true,
        "userAgent": "omp-launcher",
        "center": true
      }
    ],
    "macOSPrivateApi": true
  }
}
